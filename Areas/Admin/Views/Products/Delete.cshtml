@model EFDbFirstApproachExample.Models.Product
@{
    ViewBag.Title = "Delete";
}

<h2>Delete @Model.ProductName</h2>
<form action="/admin/product/delete/@Model.ProductID" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group colmd6">
            <label for="ProductName">Product Name</label>
            <input type="hidden" id="ProductID" name="ProductID" value="@Model.ProductID" />
            @Model.ProductName
        </div>
        <div class="form-group colmd6">
            <label for="Price">Price</label>
            @Model.Price
        </div>
    </div>

    <div>
        <p>Are you sure you want to delete this product?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-danger" href="/admin/products/index">Cancel</a>
    </div>
</form>

